YELLOW="\e[33m"
ENDCOLOR="\e[0m"


chmod +x ./scripts/*.sh
mkdir -p ./logs


echo -e "\n${YELLOW}updating${ENDCOLOR}"
./scripts/update.sh &> ./logs/update.log
echo -e "\xE2\x9C\x94 done"

echo -e "\n${YELLOW}upgrading${ENDCOLOR}"
./scripts/upgrade.sh &> ./logs/upgrade.log
echo -e "\xE2\x9C\x94 done"
